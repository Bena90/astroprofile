---
import Navbar from '../components/Navbar.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/tips.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navbar />
		<slot />
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&family=Roboto+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap');
	@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
	@import url('https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
	@import url('https://fonts.googleapis.com/css2?family=Delius+Unicase&display=swap');
	@import url('https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap');
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
		--bg-gray-900: rgb(18, 18, 18);
		--bg-gray-800: rgb(30, 30, 30);
		--text-gray-200: rgb(208,208,208);
		--global-background-color: #131415;
		--global-color-one: #ff5757;
		--global-color-two: #ffde59;
		--global-color-green: #5BD25B;
		--global-color-orange: #FF7D57;
		--global-color-violet: #CB5EEE;
		--global-color-gradient1: linear-gradient(135deg, #CB5EEE 0%, #4BE1EC 100%);
		--global-color-gradient2: linear-gradient(135deg, #6699FF 0%, #FF3366 100%);
		--global-font-family1: 'Open Sans', sans-serif;
		--global-font-family2: 'Roboto', sans-serif;
		--global-font-family3: 'Inter', sans-serif;
		--global-font-family4: 'Montserrat', sans-serif;
		--text-light: #8a8f98;
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: rgb(12, 12, 12);
	}
	body {
		margin: 0px;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
</style>
